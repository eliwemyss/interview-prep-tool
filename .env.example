# Server
PORT=3000
NODE_ENV=development

# Database (Railway provides this automatically)
DATABASE_URL=postgresql://user:password@host:port/database

# Anthropic API (Required)
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Trigger.dev v3 (For async background jobs)
TRIGGER_API_KEY=tr_prod_xxxxx
TRIGGER_API_URL=https://api.trigger.dev
TRIGGER_PROJECT_ID=interview-prep-tool

# Google Calendar & Gmail (Required for calendar/email sync)
GOOGLE_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/calendar/callback

# Email (Required - for prep notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=your_email@gmail.com

# PostHog Analytics (Required for tracking)
POSTHOG_API_KEY=phc_xxxxx
POSTHOG_HOST=https://app.posthog.com

# Frontend PostHog (Required for client-side tracking)
NEXT_PUBLIC_POSTHOG_KEY=phc_xxxxx
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# NewsAPI (Optional - for company news scraping)
NEWSAPI_KEY=xxxxx

# Levels.fyi API (Optional - for real salary data)
LEVELSFYI_API_KEY=xxxxx

# Frontend API URL
NEXT_PUBLIC_API_URL=http://localhost:3000
